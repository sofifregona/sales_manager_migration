{
  "name": "sales-manager",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "build:back": "tsc -p backend/tsconfig.json",
    "start:back": "node backend/dist/app.js",
    "watch:back": "tsc -p backend/tsconfig.json -w",
    "serve:back": "tsx --watch --tsconfig backend/tsconfig.json backend/src/server.ts",
    "dev:back": "npm run serve:back",
    "admin:create": "tsx --tsconfig backend/tsconfig.json scripts/create-admin.ts",
    "hash": "node scripts/hash-argon2.mjs"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@react-router/node": "^7.5.3",
    "@react-router/serve": "^7.5.3",
    "@types/cookie": "^0.6.0",
    "argon2": "^0.44.0",
    "cloudinary": "^2.8.0",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "isbot": "^5.1.27",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.14.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.5.3",
    "react-router-dom": "^7.6.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/vite": "^4.1.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "sass-embedded": "^1.93.3",
    "tailwindcss": "^4.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
